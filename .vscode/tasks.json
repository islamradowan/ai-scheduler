{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run FastAPI",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Start the FastAPI development server"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Run all tests with pytest"
        },
        {
            "label": "Run Tests Quiet",
            "type": "shell",
            "command": "pytest",
            "args": [
                "-q"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Run all tests quietly"
        },
        {
            "label": "Create Database",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "from app.database import create_db; create_db()"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Initialize the SQLite database"
        }
    ]
}